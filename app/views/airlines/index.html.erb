<h1>Airlines</h1>

<table class="table table-striped text-center">
	<thead>
		<th class="text-center">Airline</th>
		<th class="text-center"># Flights</th>
		<th class="text-center">Edit | Delete</th>
	</thead>

	<% @airlines.each do |airline| %>
		<tr>
			<td><%= airline.name %></td>
			<td><%= Flight.where(airline_id: airline.id).count %></td>
			<td><%= link_to "Edit", edit_airline_path(airline) %> | <%= link_to "Delete", airline_path(airline), method: :delete %></td>
		</tr>
	<% end %>
</table>

<%= link_to	"Create Airline", new_airline_path, class:"btn btn-success" %>
